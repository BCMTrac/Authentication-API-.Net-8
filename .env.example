# Copy to .env and customize. Never commit real secrets.

ASPNETCORE_ENVIRONMENT=Development

# Database
ConnectionStrings__DefaultConnection=Server=localhost\SQLEXPRESS;Database=AuthenticationAPI;Trusted_Connection=True;TrustServerCertificate=True;

# JWT options (set these per environment)
# Production suggestion for BCMTrack:
JWT__ValidIssuer=https://auth.bcmtrack.com
JWT__ValidAudience=https://api.bcmtrack.com
JWT__AccessTokenMinutes=15

# MFA (issuer shown in authenticator apps)
Mfa__Issuer=BCMTrack

# Key rotation
KeyRotation__IntervalHours=720
KeyRotation__RsaKeySize=3072
KeyRotation__OverlapActiveKeyCount=2

# Rate limiting
RateLimit__PolicyName=fixed-window
RateLimit__PermitLimit=100
RateLimit__WindowSeconds=60
RateLimit__QueueLimit=0

# CORS origins (semicolon-separated)
Cors__AllowedOrigins=http://localhost:4200;https://app.bcmtrack.com

# Admin seeding (DEV ONLY)
SeedAdmin__Email=admin@admin123.com
SeedAdmin__Password=ThisWillBePassword!
SeedAdmin__FullName=Admin User
SeedAdmin__Phone=+15551234567

# Email settings (use one of the two approaches below)
# 1) Mailtrap API (recommended for testing):
Smtp__ApiToken=
Smtp__From=noreply@example.com
Smtp__FromName=Authentication API

# 2) SMTP transport (if you prefer SMTP; leave ApiToken blank):
Smtp__Host=smtp.mailtrap.io
Smtp__Port=587
Smtp__User=your_user
Smtp__Pass=your_pass

