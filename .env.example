# Copy to .env and customize. Never commit real secrets.

ASPNETCORE_ENVIRONMENT=Development

# Database
# For local SQL Server Express. Change Database= and instance as needed.
ConnectionStrings__DefaultConnection=Server=localhost\SQLEXPRESS;Database=AuthenticationAPI;Trusted_Connection=True;TrustServerCertificate=True;

# JWT options (section name is JWT)
# ValidIssuer should match the API base URL; ValidAudience is your resource identifier
JWT__ValidIssuer=https://localhost:7086
JWT__ValidAudience=auth-api
JWT__AccessTokenMinutes=15

# Key rotation
KeyRotation__IntervalHours=720
KeyRotation__RsaKeySize=3072
KeyRotation__OverlapActiveKeyCount=2

# Rate limiting
RateLimit__PolicyName=fixed-window
RateLimit__PermitLimit=100
RateLimit__WindowSeconds=60
RateLimit__QueueLimit=0

# CORS (semicolon-separated origins). Used by the API to allow frontends.
Cors__AllowedOrigins=http://localhost:4200;http://localhost:5173

# Admin seeding (DEV ONLY). DO NOT use real credentials here.
SeedAdmin__Email=admin@local
SeedAdmin__Password=Change_this_Admin1!

# Email settings
# For testing with Mailtrap API (preferred for dev):
Smtp__ApiToken=
Smtp__From=noreply@your-domain.com
Smtp__FromName=Auth API

# If you prefer SMTP transport instead of API, set these (and leave ApiToken blank):
Smtp__Host=smtp.mailtrap.io
Smtp__Port=587
Smtp__User=your_user
Smtp__Pass=your_pass
