{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost\\SQLEXPRESS;Database=AuthenticationAPI;Trusted_Connection=True;TrustServerCertificate=True;",
    "AppDb": "Server=localhost\\SQLEXPRESS;Database=AuthenticationAPI;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "JWT": {
    "ValidIssuer": "https://auth.bcmtrac.com",
    "ValidAudience": "https://api.bcmtrac.com",
    "AccessTokenMinutes": 15
  },
  "Mfa": {
    "Issuer": "BCMTrac"
  },
  "KeyRotation": {
    "IntervalHours": 720,
    "RsaKeySize": 3072,
    "OverlapActiveKeyCount": 2
  },
  "RateLimiting": {
    "PolicyName": "fixed-window",
    "PermitLimit": 100,
    "WindowSeconds": 60,
    "QueueLimit": 0
  },
  "Cors": {
    "AllowedOrigins": "https://auth.bcmtrac.co.za;https://app.bcmtrac.co.za;https://www.bcmtrac.co.za"
  },
  "RefreshTokens": { "UseCookie": true },
  "Features": {
    "AuditAndIdempotency": true,
    "RateLimit": true,
    "Swagger": false,
    "AutoMigrate": false,
    "Seed": false
  },
  "Email": {
    "EmailConfirm": { "Url": "https://auth.bcmtrac.com/email-confirm.html" }
  },
  "PasswordReset": { "Url": "https://auth.bcmtrac.com/reset-password.html" },
  "Throttle": { "Provider": "memory" },
  "PasswordBreach": { "UseHibp": true },
  "DataProtection": { "Storage": "file" },
  "Azure": {
    "Blob": {
      "ConnectionString": "",
      "Container": "dataprotection"
    },
    "KeyVault": {
      "VaultUrl": "",
      "KeyId": ""
    }
  },
  "Smtp": {
    "Host": "smtp.bcmtrac.co.za",
    "Port": 587,
    "UseSsl": true,
    "From": "NOREPLY_AuthN@bcmtrac.co.za",
    "FromName": "AuthN",
    "Username": "admin@bcmtrac.co.za",
    "Password": "REPLACE_WITH_SECRET_FROM_KEY_VAULT"
  },
  "PasswordHistory": { "KeepCount": 12, "ReuseWindowCount": 3, "MinAgeHours": 24 },
  "Bridge": {
    "Enabled": false,
    "ApiKeyHeader": "X-Bridge-Api-Key",
    "ApiKey": "",
    "HeaderNames": [
      "X-Legacy-Session-1",
      "X-Legacy-Session-2",
      "X-Legacy-Session-3"
    ],
    "JwtHeaderName": "X-Auth-JWT"
  },
  "Validation": {
    "ReservedUsernames": [ "admin", "root", "support", "system", "security", "help", "contact", "postmaster", "administrator" ],
    "PasswordBadFragments": [ "password", "qwerty", "123456", "letmein", "welcome" ],
    "DisposableEmailDomains": [ "mailinator.com", "10minutemail.com", "guerrillamail.com", "yopmail.com", "tempmail.com", "trashmail.com", "getnada.com", "dispostable.com" ],
    "MaxPayloadSizeBytes": 20480
  },
  "Google": {
    "ClientId": "",
    "HostedDomain": ""
  }
}
