@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-header d-flex justify-content-between align-items-baseline mb-3">
    <div class="admin-logo">BCMTrac â€¢ Admin</div>
    <div>
        <a href="/" class="btn btn-sm btn-outline-secondary"><i class="fa fa-door-open me-1"></i>Auth Portal</a>
    </div>
</div>

<div id="not-admin-view" class="d-none text-center">
    <h4 class="mb-3">Insufficient Permissions</h4>
    <p>You must be an Admin to access this panel.</p>
    <a href="/" class="btn btn-primary">Go to Sign In</a>
    </div>

<div id="admin-view" class="d-none">
    <div class="row g-3 mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Invite Member</h5>
                    <div class="row g-2 align-items-end">
                        <div class="col-12 col-md-4"><label class="form-label">Email</label><input id="invite-email" class="form-control" type="email" placeholder="name@example.com" /></div>
                        <div class="col-12 col-md-3"><label class="form-label">Full name</label><input id="invite-fullname" class="form-control" type="text" placeholder="Optional" /></div>
                        <div class="col-12 col-md-3"><label class="form-label">Roles</label><input id="invite-roles" class="form-control" type="text" placeholder="e.g. Owner, Trustee" /></div>
                        <div class="col-12 col-md-2"><button id="invite-send" class="btn btn-primary w-100"><i class="fa fa-paper-plane me-1"></i>Send invite</button></div>
                    </div>
                    <div class="form-text mt-1">Creates a user and emails an activation link to set a password.</div>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-3 mb-3">
        <div class="col-12 col-lg-5">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Search Users</h5>
                    <div class="input-group mb-2">
                        <input id="search-input" class="form-control" placeholder="Username or Email" />
                        <button id="search-btn" class="btn btn-primary"><i class="fa fa-search me-1"></i>Search</button>
                    </div>
                    <div class="muted">Showing up to 25 results</div>
                    <ul id="results" class="list-group mt-3"></ul>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-7">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">User Details</h5>
                    <div id="user-details" class="mb-3 muted">Select a user to view details and actions.</div>
                    <div id="user-actions" class="d-none">
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            <button id="btn-unlock" class="btn btn-success btn-sm"><i class="fa fa-unlock me-1"></i>Unlock</button>
                            <button id="btn-lock" class="btn btn-outline-warning btn-sm"><i class="fa fa-lock me-1"></i>Lock</button>
                            <button id="btn-confirm-email" class="btn btn-outline-primary btn-sm"><i class="fa fa-check me-1"></i>Confirm Email</button>
                            <button id="btn-resend-confirm" class="btn btn-outline-secondary btn-sm"><i class="fa fa-envelope me-1"></i>Resend Confirm</button>
                            <button id="btn-disable-mfa" class="btn btn-outline-danger btn-sm"><i class="fa fa-shield-halved me-1"></i>Disable MFA</button>
                            <button id="btn-bump-token" class="btn btn-outline-dark btn-sm"><i class="fa fa-key me-1"></i>Bump Token Version</button>
                            <button id="btn-send-reset" class="btn btn-outline-info btn-sm"><i class="fa fa-rotate me-1"></i>Send Reset Email</button>
                        </div>
                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title">Roles</h6>
                                        <div class="input-group mb-2">
                                            <input id="role-input" class="form-control" placeholder="Role name e.g. Admin" />
                                            <button id="role-add-btn" class="btn btn-primary btn-sm">Add</button>
                                        </div>
                                        <div id="roles-list" class="d-flex flex-wrap gap-2"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title">Set Temporary Password</h6>
                                        <div class="input-group">
                                            <input id="temp-password" class="form-control" type="password" placeholder="New temporary password" />
                                            <button id="temp-password-btn" class="btn btn-secondary btn-sm">Set</button>
                                        </div>
                                        <div class="form-text">User will be logged out of all devices.</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card mt-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="card-title mb-0">Active Sessions</h6>
                                    <button id="sessions-revoke-all" class="btn btn-sm btn-danger"><i class="fa fa-ban me-1"></i>Revoke All</button>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-sm align-middle">
                                        <thead>
                                            <tr>
                                                <th>Session ID</th>
                                                <th>Created</th>
                                                <th>Last Seen</th>
                                                <th>Revoked</th>
                                                <th>IP</th>
                                                <th>User Agent</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody id="sessions-body"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/admin.js"></script>
