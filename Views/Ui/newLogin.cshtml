@{
    ViewData["Title"] = "Login";
    Layout = null; // standalone
}
@model AuthenticationAPI.Models.ViewModels.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BCMTrac</title>
    <link rel="stylesheet" href="~/css/newLogin.css" asp-append-version="true" />
</head>
<body>
    <div class="frame">
        <section class="left">
            <div class="panel">
                <div class="welcome">WELCOME TO</div>
                <div class="brand">BCMTRAC</div>

                <form asp-action="LoginPost" asp-controller="Ui" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="input">
                        <input asp-for="Username" type="text" placeholder="Username" autocomplete="username" />
                    </div>
                    <div class="input">
                        <input asp-for="Password" type="password" placeholder="Password" autocomplete="current-password" />
                    </div>

                    <div class="actions">
                        <label class="remember"><input asp-for="RememberMe" type="checkbox" /> Remember me</label>
                        <a class="forgot" href="#">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn">SIGN IN</button>
                    <div class="signup">Don’t have an account? <a href="#">Sign Up Now</a></div>
                </form>
            </div>
        </section>

        <aside class="right">
            <div class="overlay"></div>
            <div class="hero">
                <div class="title">INFINITY</div>
                <p class="copy">Community Management Without Limits. <br>Designed for growth. Built for trust. <p>
            </div>
            <div class="foot">
                <div>© 2015–2025 BCMTrac. All rights reserved.</div>
                <div><a href="#" style="color:#fff">Website Terms of Use</a></div>
            </div>
        </aside>
    </div>
</body>
</html>
