@{
    ViewData["Title"] = "Login";
    Layout = null; // Standalone preview for new design
}
@model AuthenticationAPI.Models.ViewModels.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - BCMTrac</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0 }
    html, body { height: 100% }
    body { font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial; color: #111827; background: #f5f6f8 }

    .page { min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 24px }
    .frame { width: min(1080px, 96vw); height: min(680px, 92vh); background: #ffffff; border-radius: 18px; overflow: hidden; display: grid; grid-template-columns: 440px 1fr; box-shadow: 0 16px 40px rgba(17,24,39,.10) }

    /* Left panel */
    .left { background: #ffffff; display: flex; align-items: center; justify-content: center }
    .panel { width: 86%; max-width: 360px }
    .welcome { text-transform: uppercase; font-weight: 700; font-size: 12px; letter-spacing: 0.12em; color: #9aa3af; text-align: center; margin-bottom: 10px }
    .brand { display: flex; align-items: center; justify-content: center; gap: 10px; margin-bottom: 8px }
    .brand .word { color: #ef3d2b; font-weight: 800; letter-spacing: 0.12em }
    .brand .word span { font-size: 22px }
    .sub { text-align: center; color: #6b7280; font-size: 13px; line-height: 1.55; margin-bottom: 20px }

    .group { margin-bottom: 12px }
    label { display: block; font-size: 12px; font-weight: 600; color: #374151; margin-bottom: 6px }
    .input { display: flex; align-items: center; gap: 10px; border: 1px solid #e5e7eb; border-radius: 999px; padding: 10px 12px; background: #fff }
    .input svg { width: 16px; height: 16px; opacity: .7 }
    .input input { width: 100%; border: 0; outline: 0; font-size: 14px }

    .actions { margin-top: 6px; display: flex; align-items: center; justify-content: space-between }
    .remember { display: inline-flex; align-items: center; gap: 8px; font-size: 12.5px; color: #374151 }
    .forgot { font-size: 12.5px }

    .btn { display: inline-flex; align-items: center; justify-content: center; width: 100%; border: 0; cursor: pointer; color: #fff; font-weight: 800; letter-spacing: .06em; border-radius: 999px; padding: 11px; background: linear-gradient(180deg, #ff5a3a, #ff3e00); box-shadow: 0 10px 24px rgba(255,90,58,.28); margin: 14px 0 10px }

    .signup { text-align: center; font-size: 12.5px; color: #6b7280 }
    .signup a { color: #ef3d2b; font-weight: 700 }

    .or { display: flex; align-items: center; gap: 12px; color: #9ca3af; font-size: 12.5px; margin: 14px 0 10px }
    .or::before, .or::after { content: ""; height: 1px; background: #e5e7eb; flex: 1 }
    .social { display: flex; align-items: center; justify-content: center; gap: 12px; margin-top: 8px }
    .social a { width: 34px; height: 34px; display: inline-flex; align-items: center; justify-content: center; border-radius: 50%; border: 1px solid #e5e7eb; color: #6b7280; background: #fff }

    /* Right hero */
    .right { position: relative; overflow: hidden; display: flex; align-items: center }
    .bg { position: absolute; inset: 0; background-image: url('@Url.Content("~/assets/admark.png")'); background-size: cover; background-position: center; opacity: .25; transform: scale(1.04) }
    .overlay { position: absolute; inset: 0; background: linear-gradient(180deg, rgba(255,118,0,.92), rgba(255,90,0,.92)) }
    .hero { position: relative; z-index: 2; color: #fff; padding: 48px 64px }
    .hero .logo { display: flex; align-items: center; gap: 12px; margin-bottom: 12px }
    .hero .title { font-weight: 800; font-size: 36px; letter-spacing: .08em; margin-bottom: 10px }
    .hero .copy { max-width: 520px; line-height: 1.6; opacity: .95 }

    .foot { position: absolute; left: 0; right: 0; bottom: 0; padding: 12px 18px; display: flex; justify-content: space-between; color: #e5e7eb; font-size: 12.5px }

    @@media (max-width: 1000px) { .frame { grid-template-columns: 1fr } .right { display: none } }
  </style>
</head>
<body>
  <div class="page">
    <div class="frame">
      <section class="left">
        <div class="panel">
          <div class="welcome">WELCOME TO</div>
          <div class="brand">
            <img src="@Url.Content("~/assets/logo2.png")" alt="BCMTrac" style="height:22px" />
            <div class="word"><span>BCMTRAC</span></div>
          </div>
          <p class="sub">Log in to get in the moment updates on the things that interest you.</p>

          <form asp-action="LoginPost" asp-controller="Ui" method="post" novalidate>
            @Html.AntiForgeryToken()
            <div class="group">
              <label asp-for="Username">Username</label>
              <div class="input">
                <svg viewBox="0 0 24 24" fill="none"><path d="M12 12a5 5 0 1 0 0-10 5 5 0 0 0 0 10Zm8 9c0-4.418-3.582-8-8-8s-8 3.582-8 8" stroke="#9ca3af" stroke-width="1.6" stroke-linecap="round"/></svg>
                <input asp-for="Username" type="text" autocomplete="username" />
              </div>
            </div>
            <div class="group">
              <label asp-for="Password">Password</label>
              <div class="input">
                <svg viewBox="0 0 24 24" fill="none"><rect x="4" y="10" width="16" height="10" rx="2" stroke="#9ca3af" stroke-width="1.6"/><path d="M8 10V8a4 4 0 1 1 8 0v2" stroke="#9ca3af" stroke-width="1.6" stroke-linecap="round"/></svg>
                <input asp-for="Password" type="password" autocomplete="current-password" />
              </div>
            </div>
            <div class="actions">
              <label class="remember"><input asp-for="RememberMe" type="checkbox" /> Remember me</label>
              <a class="forgot" href="#">Forgot your password?</a>
            </div>
            <button type="submit" class="btn">SIGN IN</button>
            <div class="signup">Don't have an account? <a href="#">Sign Up Now</a></div>
            <div class="or">Or</div>
            <div class="social">
              <a href="#" aria-label="Facebook"><svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M13 10h3l-1 4h-2v8h-4v-8H7v-4h3V8a4 4 0 0 1 4-4h2v4h-2a1 1 0 0 0-1 1v1Z"/></svg></a>
              <a href="#" aria-label="Twitter"><svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M22 5.8c-.7.3-1.5.6-2.3.7.8-.5 1.4-1.2 1.7-2-.7.4-1.6.8-2.5 1A4 4 0 0 0 12 8.6a11.3 11.3 0 0 1-8.2-4.2 4 4 0 0 0 1.2 5.3c-.6 0-1.3-.2-1.8-.5v.1a4 4 0 0 0 3.2 3.9c-.4.1-.8.2-1.2.2-.3 0-.6 0-.9-.1a4 4 0 0 0 3.8 2.8A8 8 0 0 1 2 18.6a11.3 11.3 0 0 0 6.1 1.8c7.3 0 11.3-6.1 11.3-11.3v-.5c.8-.6 1.5-1.3 2.1-2.1Z"/></svg></a>
              <a href="#" aria-label="Google"><svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M21.8 12.2c0-.7-.1-1.4-.2-2.1H12v4h5.5a4.7 4.7 0 0 1-2 3.1v2.6h3.2c1.9-1.8 3.1-4.4 3.1-7.6Z"/><path d="M12 22c2.8 0 5.2-.9 6.9-2.4l-3.2-2.6c-.9.6-2.1 1-3.7 1a6.4 6.4 0 0 1-6-4.4H2.8v2.7A10 10 0 0 0 12 22Z"/><path d="M6.3 13.6a6 6 0 0 1 0-3.2V7.7H2.8a10 10 0 0 0 0 8.6l3.5-2.7Z"/><path d="M12 5.6c1.5 0 2.9.5 4 1.6l3-3A10 10 0 0 0 2.8 7.7l3.5 2.7a6.4 6.4 0 0 1 5.7-4.8Z"/></svg></a>
              <a href="#" aria-label="LinkedIn"><svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M6.9 9.5V21H3V9.5h3.9Zm.3-5A2.2 2.2 0 1 1 5 6.8 2.2 2.2 0 0 1 7.2 4.5ZM21 13.7V21h-3.8v-6.7c0-1.7-.6-2.6-2-2.6-1.1 0-1.7.7-2 1.4-.1.3-.1.7-.1 1.1V21H9.3s.1-11.9 0-13.1h3.8v1.9c.5-.8 1.3-1.9 3.3-1.9 2.4 0 4.6 1.6 4.6 5.8Z"/></svg></a>
            </div>
          </form>
        </div>
      </section>

      <aside class="right">
        <div class="bg" aria-hidden="true"></div>
        <div class="overlay" aria-hidden="true"></div>
        <div class="hero">
          <div class="logo">
            <svg viewBox="0 0 24 24" fill="none" width="44" height="44" aria-hidden="true"><path d="M7 8c2 0 4 4 5 4s3-4 5-4a4 4 0 1 1 0 8c-2 0-4-4-5-4s-3 4-5 4a4 4 0 1 1 0-8z" stroke="#fff" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/></svg>
            <div style="font-weight:800;font-size:20px;letter-spacing:.06em">INFINITY</div>
          </div>
          <div class="title">INFINITY</div>
          <p class="copy">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam nec neque tortor. Proin efficitur leo vel ex aliquam ullamcorper aenean et pretium ligula.</p>
        </div>
        <div class="foot"><div>© 2015–2025 BCMTrac. All rights reserved.</div><div><a style="color:#fff" href="#">Website Terms of Use</a></div></div>
      </aside>
    </div>
  </div>
</body>
</html>
