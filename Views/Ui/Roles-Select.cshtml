@{
  ViewData["Title"] = "Select Role";
}
<style>
body { font-family: system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif; margin:0; background:#0e1114; color:#f2f6f9; line-height:1.4; }
a { color:#3fa9ff; text-decoration:none; }
a:hover { text-decoration:underline; }
.wizard-card { width:100%; max-width:640px; margin:40px auto; background:#1c232b; border:1px solid #27323b; border-radius:16px; padding:32px 36px 44px; box-shadow:0 4px 24px -4px rgba(0,0,0,.6); }
.wizard-header { text-align:center; margin-bottom:28px; }
.logo-pill { display:inline-block; background:#182028; padding:10px 20px; border-radius:99px; font-weight:600; letter-spacing:.5px; font-size:14px; color:#e5eef5; margin-bottom:12px; box-shadow:0 0 0 1px #27323b,0 4px 12px -2px rgba(0,0,0,.4); }
.gradient-box { background:linear-gradient(135deg,#13202b,#1d2c38); padding:28px 24px 32px; border-radius:14px; box-shadow:inset 0 0 0 1px #22313d; }
.wizard-heading { margin:0 0 6px; font-size:28px; font-weight:600; letter-spacing:.5px; }
.sub { margin:0; font-size:14px; color:#a5b4c2; }
form { display:block; }
.role-grid { display:grid; grid-template-columns:repeat(auto-fill,minmax(160px,1fr)); gap:14px; margin:10px 0 8px; }
.role-option { display:flex; align-items:center; gap:10px; background:#141c23; padding:12px 14px; border:1px solid #24313b; border-radius:10px; cursor:pointer; font-size:14px; user-select:none; position:relative; }
.role-option input { position:absolute; opacity:0; }
.role-option:hover { border-color:#385063; }
.role-option span { color:#d7e3ec; }
.field-error { color:#ff5d5d; font-size:12px; min-height:16px; }
.validation-summary { margin-bottom:12px; color:#ff9393; font-size:13px; }
.footer-actions { display:flex; gap:14px; justify-content:flex-end; margin-top:8px; }
.btn { appearance:none; border:none; cursor:pointer; font:600 14px system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif; padding:12px 20px; border-radius:12px; background:#24313b; color:#dfe9f1; letter-spacing:.5px; transition:background .18s, box-shadow .18s; text-decoration:none; display:inline-flex; align-items:center; gap:6px; }
.btn.primary { background:#0f6abf; color:#fff; box-shadow:0 2px 10px -2px rgba(15,106,191,.5); }
.btn.primary:hover { background:#0d5ca5; }
.btn:hover { background:#2c3a45; text-decoration:none; }
.btn:active { transform:translateY(1px); }
.roles-step .wizard-heading { color:#b6f8d5; }
@@media (max-width:600px){ .wizard-card { margin:24px 14px; padding:28px 26px 34px; } .role-grid { grid-template-columns:repeat(auto-fill,minmax(120px,1fr)); } .footer-actions { flex-direction:column; } .btn { width:100%; justify-content:center; } }
</style>

@model AuthenticationAPI.Models.ViewModels.RoleSelectionViewModel
<div class="wizard-card roles-step">
  <div class="wizard-header gradient-box">
    <div class="logo-pill">BCMTrac</div>
    <h2 class="wizard-heading">Select Role</h2>
    <p class="sub">Choose a role to continue.</p>
  </div>
  <form asp-action="RolesSelectPost" method="post" novalidate>
    @Html.AntiForgeryToken()
    <div class="validation-summary">@Html.ValidationSummary()</div>
    <div class="role-grid">
      @if(Model.AvailableRoles.Any())
      {
          foreach(var r in Model.AvailableRoles)
          {
              <label class="role-option">
                <input type="radio" name="SelectedRole" value="@r" @(Model.SelectedRole==r?"checked":null) />
                <span>@r</span>
              </label>
          }
      }
      else { <p class="muted">No roles assigned.</p>; }
    </div>
    <span class="field-error" asp-validation-for="SelectedRole"></span>
    <div class="footer-actions">
      <button class="btn primary" type="submit">Continue</button>
    </div>
  </form>
</div>