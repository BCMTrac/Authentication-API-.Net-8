@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="admin-login-view">
    <div class="text-center mb-3">
        <h2 class="page-title">BCMTrac Admin</h2>
        <p class="subtle">Authorised personnel only.</p>
    </div>

    <div class="sso-buttons mb-3">
        <button id="microsoft-login" class="btn btn-microsoft w-100 btn-lg mb-2">
            <i class="fa-brands fa-microsoft me-2"></i> Sign in with Microsoft
        </button>
        <button id="google-login" class="btn btn-google w-100 btn-lg">
            <i class="fa-brands fa-google me-2"></i> Sign in with Google
        </button>
    </div>

    <div class="divider"><span>or</span></div>

    <div class="text-center mt-3">
        <a class="link-underline" href="#" id="show-password-login">More options (Email + Password)</a>
    </div>

    <form id="password-login-form" class="mt-3 d-none">
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="admin-login-email" placeholder="Work Email" required autocomplete="email">
            <label for="admin-login-email">Work Email</label>
            <div class="invalid-feedback"></div>
        </div>
        <div class="form-floating mb-2">
            <input type="password" class="form-control" id="admin-login-password" placeholder="Password" required autocomplete="current-password">
            <label for="admin-login-password">Password</label>
            <div class="invalid-feedback"></div>
        </div>
        <button type="submit" class="btn btn-primary w-100 btn-lg btn-cta">
            <span class="btn-text">Continue</span>
            <span class="btn-spinner d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
        </button>
    </form>

    <div class="mfa-step d-none" id="admin-mfa-input-container">
        <label class="form-label">Authenticator code</label>
        <div class="otp-grid" aria-label="6-digit code">
            <input inputmode="numeric" maxlength="1" class="otp" autocomplete="one-time-code" />
            <input inputmode="numeric" maxlength="1" class="otp" />
            <input inputmode="numeric" maxlength="1" class="otp" />
            <input inputmode="numeric" maxlength="1" class="otp" />
            <input inputmode="numeric" maxlength="1" class="otp" />
            <input inputmode="numeric" maxlength="1" class="otp" />
        </div>
        <div class="d-flex justify-content-between mt-2">
            <button type="button" class="btn btn-outline-secondary btn-sm" id="admin-use-recovery">Use recovery code</button>
        </div>
        <button type="submit" class="btn btn-primary w-100 btn-lg btn-cta mt-3">
            <span class="btn-text">Verify MFA</span>
            <span class="btn-spinner d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
        </button>
    </div>

    <div class="text-center mt-3 small">
        <a class="link-underline" href="/">Back to Customer Login</a>
    </div>
</div>

<script src="/js/admin-login.js"></script>
