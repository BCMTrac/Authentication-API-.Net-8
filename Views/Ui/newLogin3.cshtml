@{
    ViewData["Title"] = "Login 3";
    Layout = null; // standalone
}
@model AuthenticationAPI.Models.ViewModels.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BCMTrac</title>
    <link rel="stylesheet" href="~/css/newLogin3.css" />
</head>
<body>
    <div class="frame">
        <section class="left">
            <div class="panel">
                <div class="welcome">HELLO AGAIN</div>
                <div class="brand">BCMTRAC</div>

                <form asp-action="LoginPost" asp-controller="Ui" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="input">
                        <input asp-for="Username" type="text" placeholder="Your username" autocomplete="username" />
                    </div>
                    <div class="input">
                        <input asp-for="Password" type="password" placeholder="Your password" autocomplete="current-password" />
                    </div>

                    <div class="actions">
                        <label class="remember"><input asp-for="RememberMe" type="checkbox" /> Stay logged in</label>
                        <a class="forgot" href="#">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn">ACCESS ACCOUNT</button>
                    <div class="signup">Don't have access? <a href="#">Request access</a></div>
                </form>
            </div>
        </section>

        <aside class="right">
            <div class="overlay"></div>
            <div class="hero">
                <div class="title">TRUSTED PLATFORM</div>
                <p class="copy">Join thousands of users who rely on BCMTrac for secure, reliable access to their business applications. Built with enterprise-grade security and user experience in mind.</p>
            </div>
            <div class="foot">
                <div>© 2015–2025 BCMTrac. All rights reserved.</div>
                <div><a href="#" style="color:#fff">Terms & Conditions</a></div>
            </div>
        </aside>
    </div>
</body>
</html>