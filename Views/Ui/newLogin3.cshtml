@{
    ViewData["Title"] = "Login";
    Layout = null;
}
@model AuthenticationAPI.Models.ViewModels.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - BCMTrac</title>
  <link rel="stylesheet" href="~/css/newLogin3.css" asp-append-version="true" />
</head>
<body class="page">
  <main class="shell">
    <section class="card">
      <!-- Left: Form -->
      <div class="left">
        <h1 class="headline">
          Welcome back.<br />
          <span>Sign in to your account</span>
        </h1>

        <form asp-action="LoginPost" asp-controller="Ui" method="post" class="form" novalidate>
          @Html.AntiForgeryToken()

          <div class="group">
            <input asp-for="Username" type="email" placeholder="Enter your email address" autocomplete="username" />
          </div>

          <div class="group">
            <input asp-for="Password" type="password" placeholder="Password" autocomplete="current-password" />
          </div>

          <button type="submit" class="btn-primary">Sign in</button>

          <div class="divider"><span>OR</span></div>

          <button type="button" class="btn-outline">Sign in with Google</button>

          <div class="centered-content">
            <p class="fineprint">
              By logging in, you agree to our <a href="#">Privacy Policy</a> and <a href="#">Terms & Conditions</a>.
            </p>

            <div class="links">
              <a href="#">Lost password?</a>
              <a href="#">Donâ€™t have an account? Click here to register</a>
            </div>
          </div>
        </form>
      </div>

      <!-- Right: 3D Floating Image -->
      <div class="right">
        <div class="stage">
          <div class="device">
            <img src="~/assets/admark.png" alt="Product preview" />
            <div class="glow"></div>
          </div>
        </div>
      </div>
    </section>
  </main>
</body>
</html>
