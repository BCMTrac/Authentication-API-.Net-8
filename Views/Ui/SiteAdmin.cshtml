@{
    ViewData["Title"] = "Site Admin Login";
}
@model AuthenticationAPI.Models.ViewModels.SiteAdminLoginViewModel

<link rel="stylesheet" href="@(Url.Content("~/css/SiteAdmin.css"))" />

<div class="container">
    <div class="login-box">
        <div class="logo-header">
            <div class="logo">
                <span class="logo-text">BCMTrac</span>
            </div>
            <div class="welcome-text">Site Admin Access</div>
            <div class="subtitle">Restricted administrative portal</div>
        </div>

        <form asp-action="SiteAdminPost" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="validation-summary">@Html.ValidationSummary()</div>

            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" type="text" autocomplete="username" />
                <span class="field-error" asp-validation-for="Username"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" autocomplete="current-password" />
                <span class="field-error" asp-validation-for="Password"></span>
            </div>

            <div class="admin-warning">
                ⚠ Authorised personnel only. Activity is logged.
            </div>

            <div class="button-group">
                <button class="btn btn-login" type="submit">Login</button>
                <a class="btn btn-cancel" href="/login">User Login</a>
            </div>
        </form>
    </div>
</div>

<div class="footer">
    <div>Copyright © 2015 - 2025</div>
    <div><a href="#">Website Terms of Use</a></div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
