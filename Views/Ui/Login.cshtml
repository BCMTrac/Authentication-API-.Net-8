@{
  ViewData["Title"] = "Login";
}
<style>
    body {
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
      margin: 0;
      background: #0e1114;
      color: #f2f6f9;
      line-height: 1.4;
    }

    a {
      color: #3fa9ff;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    .wizard-card {
      width: 100%;
      max-width: 520px;
      margin: 40px auto;
      background: #1c232b;
      border: 1px solid #27323b;
      border-radius: 16px;
      padding: 32px 36px 40px;
      box-shadow: 0 4px 24px -4px rgba(0, 0, 0, .6);
    }

    .wizard-header {
      text-align: center;
      margin-bottom: 28px;
    }

    .logo-pill {
      display: inline-block;
      background: #182028;
      padding: 10px 20px;
      border-radius: 99px;
      font-weight: 600;
      letter-spacing: .5px;
      font-size: 14px;
      color: #e5eef5;
      margin-bottom: 12px;
      box-shadow: 0 0 0 1px #27323b, 0 4px 12px -2px rgba(0, 0, 0, .4);
    }

    .gradient-box {
      background: linear-gradient(135deg, #13202b, #1d2c38);
      padding: 28px 24px 32px;
      border-radius: 14px;
      box-shadow: inset 0 0 0 1px #22313d;
    }

    .wizard-heading {
      margin: 0 0 6px;
      font-size: 28px;
      font-weight: 600;
      letter-spacing: .5px;
    }

    .sub {
      margin: 0;
      font-size: 14px;
      color: #a5b4c2;
    }

    form {
      display: block;
    }

    .form-field {
      margin-bottom: 18px;
      display: flex;
      flex-direction: column;
      gap: 6px;
    }

    .form-field.inline {
      flex-direction: row;
      align-items: center;
      gap: 8px;
    }

    .form-field label {
      font-size: 13px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: .75px;
      color: #c6d2db;
    }

    .form-field input[type=text],
    .form-field input[type=password],
    .form-field input[type=email] {
      padding: 12px 14px;
      border-radius: 10px;
      background: #12181e;
      border: 1px solid #2a3844;
      color: #f2f6f9;
      outline: none;
      transition: border-color .18s, background .18s;
      font: inherit;
    }

    .form-field input[type=text]:focus,
    .form-field input[type=password]:focus,
    .form-field input[type=email]:focus {
      border-color: #3fa9ff;
      background: #10161c;
    }

    .field-error {
      color: #ff5d5d;
      font-size: 12px;
      min-height: 16px;
    }

    .validation-summary {
      margin-bottom: 12px;
      color: #ff9393;
      font-size: 13px;
    }

    .actions-row,
    .footer-actions {
      display: flex;
      gap: 14px;
      justify-content: flex-end;
      margin-top: 8px;
    }

    .btn {
      appearance: none;
      border: none;
      cursor: pointer;
      font: 600 14px system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif;
      padding: 12px 20px;
      border-radius: 12px;
      background: #24313b;
      color: #dfe9f1;
      letter-spacing: .5px;
      transition: background .18s, box-shadow .18s;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 6px;
    }

    .btn.primary {
      background: #0f6abf;
      color: #fff;
      box-shadow: 0 2px 10px -2px rgba(15,106,191,.5);
    }

    .btn.primary:hover {
      background: #0d5ca5;
    }

    .btn:hover {
      background: #2c3a45;
      text-decoration: none;
    }

    .btn:active {
      transform: translateY(1px);
    }

    .muted {
      color: #5e6c79;
      font-size: 13px;
    }

    .link {
      font-size: 13px;
    }

    .aux-row {
      margin-top: 16px;
      text-align: center;
    }

    .login-step .wizard-heading {
      color: #9ed0ff;
    }

  @@media (max-width: 600px) {
      .wizard-card {
        margin: 24px 14px;
        padding: 28px 26px 34px;
      }
      .actions-row,
      .footer-actions {
        flex-direction: column;
      }
      .btn {
        width: 100%;
        justify-content: center;
      }
    }
</style>

@model AuthenticationAPI.Models.ViewModels.LoginViewModel
<div class="wizard-card login-step">
  <div class="wizard-header gradient-box">
    <div class="logo-pill">BCMTrac</div>
    <h2 class="wizard-heading">User Login</h2>
  </div>
  <form asp-action="LoginPost" method="post" novalidate>
    @Html.AntiForgeryToken()
    <div class="validation-summary">@Html.ValidationSummary()</div>
    <div class="form-field">
      <label asp-for="Username"></label>
      <input asp-for="Username" autocomplete="username" />
      <span class="field-error" asp-validation-for="Username"></span>
    </div>
    <div class="form-field">
      <label asp-for="Password"></label>
      <input asp-for="Password" autocomplete="current-password" />
      <span class="field-error" asp-validation-for="Password"></span>
    </div>
    <div class="form-field inline">
      <input asp-for="RememberMe" /> <label asp-for="RememberMe">Remember Me</label>
    </div>
    <div class="actions-row">
      <button class="btn primary" type="submit">Login</button>
      <a href="/" class="btn" role="button">Cancel</a>
    </div>
  </form>
</div>