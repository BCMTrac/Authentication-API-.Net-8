@{
  Layout = "_LoginWizardLayout";
  ViewData["Asset"] = "login";
  ViewData["Title"] = "Login";
}

<div class="wizard-card login-step">
  <div class="wizard-header gradient-box">
    <div class="logo-pill">BCMTrac</div>
    <h2 class="wizard-heading">User Login</h2>
  </div>
  <form id="loginForm" novalidate>
    <div class="form-field">
      <label for="username">Username</label>
      <input id="username" required autocomplete="username" />
    </div>
    <div class="form-field">
      <label for="password">Password</label>
      <input id="password" type="password" required autocomplete="current-password" />
    </div>
    <div class="actions-row">
      <button class="btn primary" id="loginBtn" type="submit">Login</button>
      <button type="button" class="btn" id="cancelBtn">Cancel</button>
    </div>
    <label class="remember-me">
      <input type="checkbox" id="rememberMe" /> Remember Me
    </label>
    <div class="aux-row">
      <a class="link" id="forgotLink" href="/reset-password">Forgot your password?</a>
    </div>
  </form>
</div>