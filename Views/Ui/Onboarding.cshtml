@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeadStyles {
    <link rel="stylesheet" href="/css/onboarding.css" />
}

<div class="onboarding-container">
    <div class="admin-header d-flex justify-content-between align-items-baseline mb-3">
        <div class="admin-logo">BCMTrac â€¢ Customer Onboarding</div>
        <div>
            <a href="/Ui/Admin" class="btn btn-sm btn-outline-secondary"><i class="fa fa-users me-1"></i>User Management</a>
        </div>
    </div>

    <!-- Stepper Navigation -->
    <ul class="nav nav-pills nav-fill" id="onboarding-stepper">
        <li class="nav-item">
            <a class="nav-link active" data-step="1" href="#">1. Company</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-step="2" href="#">2. Primary Admin</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-step="3" href="#">3. User Invites</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-step="4" href="#">4. Policies & Plan</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-step="5" href="#">5. Review & Create</a>
        </li>
    </ul>

    <div class="card mt-3">
        <div class="card-body">
            <!-- Step 1: Company -->
            <div class="step" id="step-1">
                <h5 class="card-title">Company Details</h5>
                <div class="row g-3">
                    <div class="col-md-6"><label class="form-label">Company Name</label><input type="text" class="form-control" id="company-name" placeholder="e.g. Palm Grove Body Corporate" autocomplete="organization" /><div class="invalid-feedback"></div></div>
                    <div class="col-md-6"><label class="form-label">Subdomain</label><input type="text" class="form-control" id="subdomain" placeholder="palmgrove" autocomplete="off" /><div class="invalid-feedback"></div></div>
                    <div class="col-md-4"><label class="form-label">Country</label><select class="form-select" id="country" autocomplete="country"><option>South Africa</option></select><div class="invalid-feedback"></div></div>
                    <div class="col-md-4"><label class="form-label">Currency</label><select class="form-select" id="currency" autocomplete="off"><option>ZAR</option></select><div class="invalid-feedback"></div></div>
                    <div class="col-md-4"><label class="form-label">Time Zone</label><select class="form-select" id="time-zone" autocomplete="off"><option>Africa/Johannesburg</option></select><div class="invalid-feedback"></div></div>
                </div>
            </div>

            <!-- Step 2: Primary Admin -->
            <div class="step d-none" id="step-2">
                <h5 class="card-title">Primary Administrator</h5>
                <div class="row g-3">
                    <div class="col-md-6"><label class="form-label">First Name</label><input type="text" class="form-control" id="admin-first-name" autocomplete="given-name" /><div class="invalid-feedback"></div></div>
                    <div class="col-md-6"><label class="form-label">Last Name</label><input type="text" class="form-control" id="admin-last-name" autocomplete="family-name" /><div class="invalid-feedback"></div></div>
                    <div class="col-md-8"><label class="form-label">Work Email</label><input type="email" class="form-control" id="admin-work-email" autocomplete="email" /><div class="invalid-feedback"></div></div>
                    <div class="col-md-4"><label class="form-label">Phone (Optional)</label><input type="tel" class="form-control" id="admin-phone" autocomplete="tel" /><div class="invalid-feedback"></div></div>
                </div>
            </div>

            <!-- Step 3: User Invites -->
            <div class="step d-none" id="step-3">
                <h5 class="card-title">Bulk User Invites (Optional)</h5>
                <p class="subtle">Paste from a spreadsheet (Email, First, Last, Role, Department).</p>
                <textarea class="form-control" rows="8" id="user-invites-textarea" placeholder="name@example.com, John, Doe, Trustee, Finance" autocomplete="off"></textarea><div class="invalid-feedback"></div>
            </div>

            <!-- Step 4: Policies & Plan -->
            <div class="step d-none" id="step-4">
                <h5 class="card-title">Policies & Plan</h5>
                <div class="row">
                    <div class="col-md-6">
                        <h6>Plan</h6>
                        <select class="form-select" id="plan-select" autocomplete="off">
                            <option>Starter</option>
                            <option>Pro</option>
                            <option>Enterprise</option>
                        </select><div class="invalid-feedback"></div>
                    </div>
                    <div class="col-md-6">
                        <h6>Security</h6>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="mfa-required" checked>
                            <label class="form-check-label" for="mfa-required">Require MFA for all users</label>
                        </div>
                    </div>
                </div>
                 <div class="mt-3">
                    <h6>Compliance</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="popia-dpa">
                        <label class="form-check-label" for="popia-dpa">POPIA & DPA agreement signed</label>
                    </div>
                </div>
            </div>

            <!-- Step 5: Review & Create -->
            <div class="step d-none" id="step-5">
                <h5 class="card-title">Review & Create</h5>
                <p>A summary of the new tenant will be displayed here.</p>
            </div>
        </div>
    </div>

    <!-- Stepper Footer -->
    <div class="d-flex justify-content-between mt-3">
        <button class="btn btn-secondary" id="prev-btn" disabled>Back</button>
        <button class="btn btn-primary" id="next-btn">Next</button>
        <button class="btn btn-success d-none" id="create-btn">Create Tenant & Send Invites</button>
    </div>
</div>

<script src="/js/onboarding.js"></script>
