@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="login-view">
    <h3 class="mb-4 text-center">Sign In</h3>
    <form id="login-form">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="login-identifier" placeholder="Username or Email" required>
            <label for="login-identifier">Username or Email</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="login-password" placeholder="Password" required>
            <label for="login-password">Password</label>
        </div>
        <div class="form-floating mb-3 d-none" id="mfa-input-container">
            <input type="text" class="form-control" id="login-mfa" placeholder="MFA Code">
            <label for="login-mfa">MFA Code</label>
        </div>
        <button type="submit" class="btn btn-primary w-100 btn-lg">Login</button>
    </form>
    <div class="text-center mt-3">
        <a href="#" id="show-forgot-password">Forgot Password?</a>
        <span class="mx-2 text-muted">â€¢</span>
        <a href="#" id="resend-confirm-link">Resend confirmation email</a>
    </div>
    <div class="mt-4 text-center">
        <p>Don't have an account? <a href="#" id="show-register">Sign Up</a></p>
    </div>
</div>

<div id="register-view" class="d-none">
    <h3 class="mb-4 text-center">Create Account</h3>
    <form id="register-form">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="register-username" placeholder="Username" required>
            <label for="register-username">Username</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="register-fullname" placeholder="Full Name">
            <label for="register-fullname">Full Name</label>
        </div>
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="register-email" placeholder="Email" required>
            <label for="register-email">Email</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="register-password" placeholder="Password" required>
            <label for="register-password">Password</label>
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" value="" id="register-terms" required>
            <label class="form-check-label" for="register-terms">
                I accept the <a href="#">Terms and Conditions</a>
            </label>
        </div>
        <button type="submit" class="btn btn-primary w-100 btn-lg">Register</button>
    </form>
    <div class="mt-4 text-center">
        <p>Already have an account? <a href="#" id="show-login-from-register">Sign In</a></p>
    </div>
</div>

<div id="forgot-password-view" class="d-none">
    <h3 class="mb-4 text-center">Reset Password</h3>
    <form id="forgot-password-form">
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="forgot-email" placeholder="Enter your email" required>
            <label for="forgot-email">Enter your email</label>
        </div>
        <button type="submit" class="btn btn-primary w-100 btn-lg">Send Reset Link</button>
    </form>
    <div class="mt-4 text-center">
        <p><a href="#" id="show-login-from-forgot">Back to Sign In</a></p>
    </div>
</div>

<div id="logged-in-view" class="d-none">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">Dashboard</h3>
        <button id="logout-button" class="btn btn-sm btn-outline-secondary">Logout</button>
    </div>
    <div id="user-info" class="mb-4"></div>
    <div id="mfa-management-view"></div>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Change Password</h5>
            <form id="change-password-form">
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="current-password" placeholder="Current Password" required>
                    <label for="current-password">Current Password</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="new-password" placeholder="New Password" required>
                    <label for="new-password">New Password</label>
                </div>
                <button type="submit" class="btn btn-secondary">Update Password</button>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <button id="logout-all-button" class="btn btn-sm btn-danger">Logout All Devices</button>
    </div>
</div>

<script src="/js/main.js"></script>
