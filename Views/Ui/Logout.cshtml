@{
    ViewData["Title"] = "Logging Out";
}
<link rel="stylesheet" href="@(Url.Content("~/css/Logout.css"))" />

<div class="container">
    <div class="login-box">
        <div class="logo-header">
            <div class="logo">
                <span class="logo-text">BCMTrac</span>
            </div>
            <div class="welcome-text">Signing you out…</div>
            <div class="subtitle">Please wait a moment.</div>
        </div>

        <!-- Silent logout form -->
        <form id="logoutForm" asp-action="Logout" asp-controller="Account" method="post" novalidate>
            @Html.AntiForgeryToken()
            <noscript>
                <p class="noscript-msg">JavaScript is disabled. Click the button below to log out.</p>
                <button type="submit" class="btn btn-login">Logout</button>
            </noscript>
        </form>

        <div class="status" aria-live="polite">Processing logout…</div>
    </div>
</div>

<div class="footer">
    <div>Copyright © 2015 - 2025</div>
    <div><a href="#">Website Terms of Use</a></div>
</div>

<script>
    window.addEventListener('DOMContentLoaded', () => {
        const f = document.getElementById('logoutForm');
        if (f) f.submit();
    });
</script>
