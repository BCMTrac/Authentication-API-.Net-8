@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="activate-view">
    <h3 class="mb-3 text-center">Activate your account</h3>
    <p class="text-center subtle mb-4">Set your details and password to finish.</p>
    <form id="activate-form">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="act-fullname" placeholder="Full name">
            <label for="act-fullname">Full name</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="act-password" placeholder="Password" required>
            <label for="act-password">Password</label>
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="act-terms" required>
            <label class="form-check-label" for="act-terms">I agree to the Terms and Privacy</label>
        </div>
        <button type="submit" class="btn btn-primary w-100 btn-lg">Create account</button>
    </form>
    <div class="text-center mt-3">
        <a href="/">Back to Sign In</a>
    </div>
</div>

<div id="activate-success" class="d-none text-center">
    <h3 class="mb-3">Account activated</h3>
    <p class="mb-4">Your account is ready. You can now sign in.</p>
    <a href="/" class="btn btn-primary">Go to Sign In</a>
</div>

<script src="/js/activate.js"></script>

