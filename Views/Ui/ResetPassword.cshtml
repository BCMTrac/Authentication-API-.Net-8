@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="reset-view">
    <h3 class="mb-4 text-center">Set New Password</h3>
    <form id="reset-form">
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="reset-new-password" placeholder="New Password" required autocomplete="new-password">
            <label for="reset-new-password">New Password</label>
            <div class="invalid-feedback"></div>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="reset-confirm-password" placeholder="Confirm New Password" required autocomplete="new-password">
            <label for="reset-confirm-password">Confirm New Password</label>
            <div class="invalid-feedback"></div>
        </div>
        <button type="submit" class="btn btn-primary w-100 btn-lg">Reset Password</button>
    </form>
</div>

<div id="success-view" class="d-none text-center">
    <h3 class="mb-4">Password Reset Successfully!</h3>
    <p>You can now sign in with your new password.</p>
    <a href="/" class="btn btn-primary">Back to Login</a>
</div>

<script src="/js/reset.js"></script>
